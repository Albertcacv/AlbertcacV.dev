---
interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<article class='card'>
	<img src={href} />
	<h3>{title}</h3>
</article>
<style>
	.card {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: space-around;
		padding: 1px;
		background-color: var(--black-secondary);
		border-radius: 7px;
		width: 250px;
		height: 200px;
		color: var(--white-primary);
	}

	h3 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	img {
		width: 150px;
		height: 150px;
	}
</style>
