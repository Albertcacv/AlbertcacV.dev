---
import Button from './Button.astro';
---

<main>
	<div class='logo-container'></div>
	<h1 class='text-gradient title'>Hello, I'm Alberto,</h1>
	<h2 class='subtitle'>Software Egineer based in Spain.</h2>

	<div class='buttons'>
		<Button
			href='https://www.linkedin.com/in/albertcacv/'
			title='GET IN TOUCH'
			type='primary'
		/>
		<!-- <Button title='VIEW ALL WORKS' type='secondary' /> -->
	</div>
</main>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		color: white;
		min-height: 100vh;
	}
	.logo-container {
		background-color: white;
		border-radius: 50%;
		height: 300px;
		width: 300px;
		background-image: url('/hero-picture.png');
		background-position: center;
		background-size: contain;
		background-repeat: no-repeat;
	}

	.title {
		margin-bottom: 0;
	}
	.subtitle {
		margin-top: 10px;
		text-align: center;
	}
	.buttons {
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: space-evenly;
	}
</style>
